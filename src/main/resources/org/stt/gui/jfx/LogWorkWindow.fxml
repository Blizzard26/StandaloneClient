<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" maxHeight="80.0" maxWidth="200.0" minHeight="80.0" minWidth="200.0" prefHeight="80.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.91" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="TOP_RIGHT" opacity="0.8">
         <children>
            <TextArea fx:id="commandText" onKeyPressed="#onKeyPressed" prefHeight="200.0" prefWidth="200.0" promptText="%logWork" wrapText="true">
               <tooltip>
                  <Tooltip text="%command.tooltip" />
               </tooltip>
            </TextArea>
            <Button fx:id="insertButton" alignment="CENTER_RIGHT" contentDisplay="RIGHT" defaultButton="true" mnemonicParsing="true" onAction="#insert" text="%insert" />
         </children>
      </VBox>
   </center>
</BorderPane>
